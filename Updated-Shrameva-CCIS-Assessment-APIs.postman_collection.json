    {
      "name": "Assessment Management",
      "item": [
        {
          "name": "Start Assessment",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('sessionId', response.sessionId);",
                  "    pm.environment.set('personId', response.personId);",
                  "    console.log('Session ID saved:', response.sessionId);",
                  "    console.log('Person ID saved:', response.personId);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"personId\": \"{{personId}}\",\n  \"assessmentType\": \"comprehensive\",\n  \"culturalContext\": \"INDIA\",\n  \"languagePreference\": \"en\",\n  \"maxDuration\": 75,\n  \"assessmentPurpose\": \"initial_evaluation\",\n  \"accessibilityNeeds\": [],\n  \"metadata\": {\n    \"tags\": [\"new_student\", \"engineering\"],\n    \"priority\": \"normal\"\n  }\n}"
